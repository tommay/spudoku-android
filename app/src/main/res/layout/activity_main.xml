<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <!-- It doesn't work to put the "100%" stuff in the main LinearLayout
         of grid.xml, although it works when the code is inlined instead
         of included.  Fortunately, it works to put the 100% stuff in
         a FrameLayout here and include grid.xml into that.  -->
    <FrameLayout
        app:layout_widthPercent="100%"
        app:layout_aspectRatio="100%">
        <include layout="@layout/board"/>
    </FrameLayout>
</android.support.percent.PercentFrameLayout>

