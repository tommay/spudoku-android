<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <!-- The game board.  -->

  <!-- The only purpose of this FrameLayout is to give the board an id.
       This is a better place to do it than down in board.xml.  -->
  <FrameLayout
      android:id="@+id/board"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <include layout="@layout/board"/>
  </FrameLayout>

  <!-- The buttons.  -->
  
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="center">
    <Button
        android:id="@+id/button_setup"
        android:text="Puzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickSetup"/>
    <Button
        android:id="@+id/button_solved"
        android:text="Solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickSolved"/>
    <Button
        android:id="@+id/button_hint"
        android:text="Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickHint"/>
  </LinearLayout>

  <!-- The NEW button on the left with the puzzle layout and
       difficulty spinners stacked to its right.  The button is in its
       own vertical LinearLayout so it can be vertically centered with
       the spinners.  ->

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
      <Button
          android:id="@+id/button_new"
          android:text="New"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Layout: "
            android:textColor="#282828"/>
        <Spinner
            android:id="@+id/spinner_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Difficulty: "
            android:textColor="#282828"/>
        <Spinner
            android:id="@+id/spinner_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <!-- ProgressBr visible while creating a puzzle, gone otherwise.
       It's meaningless but makes it look like something is
       happening. -->

  <ProgressBar
      android:id="@+id/progressbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      android:indeterminate="true"
      android:visibility="gone"
      style="@android:style/Widget.ProgressBar.Horizontal" />

  <!-- A row of colored circles, centered horizontally.  -->

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="center">
    <!-- There's no way I'm writing out nine ImageViews here.  So I just
	 make one and clone the rest in MainActivity.java.
	 The size here dodesn't matter.  MainActivity#onResume will
         make the all the same size as the board ImageViews.  -->
    <!-- Padding reduces the size of the circles, margin increases the
         spacing.  These are tweaked to where I like the look.  -->
    <LinearLayout
        android:id="@+id/bottom_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp"
          android:layout_marginTop="0dp"
          android:layout_marginBottom="0dp"
          android:paddingLeft="3dp"
          android:paddingRight="3dp"
          android:paddingTop="0dp"
          android:paddingBottom="0dp"
          android:adjustViewBounds="true"
          android:scaleType="fitCenter"
          android:src="@drawable/circle"/>
    </LinearLayout>
  </LinearLayout>

  <!-- The hint.  -->

  <TextView
      android:id="@+id/hint_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"/>

</LinearLayout>
